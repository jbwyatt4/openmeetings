<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	
	<bean id="placeholderConfig" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	    <property name="location" value="/WEB-INF/red5-web.properties" />
	</bean>
	
	<bean id="web.context" class="org.red5.server.Context" 
		autowire="byType" />
	
	<bean id="web.scope" class="org.red5.server.WebScope"
		 init-method="register">
		<property name="server" ref="red5.server" />
		<property name="parent" ref="global.scope" />
		<property name="context" ref="web.context" />
		<property name="handler" ref="web.handler" />
		<property name="contextPath" value="${webapp.contextPath}" />
		<property name="virtualHosts" value="${webapp.virtualHosts}" />
	</bean>

    
	<!-- Class for the Streaming Handlers -->
	<bean id="web.handler" 
	    class="org.xmlcrm.app.remote.Application"
		singleton="true" />

	<!-- Class for Methods which can be invoked be the client -->
    <bean id="fileservice.service" 
	    class="org.xmlcrm.app.remote.ConferenceLibrary" 
		singleton="true" />
		
	<!-- Class for Methods which can be invoked be the client -->
    <bean id="conferenceservice.service" 
	    class="org.xmlcrm.app.remote.ConferenceService" 
		singleton="true" />		
		
	<!-- Class for Methods which can be invoked be the client -->
    <bean id="userservice.service" 
	    class="org.xmlcrm.app.remote.UserService" 
		singleton="true" />		

	<!-- Class for Methods which can be invoked be the client -->
    <bean id="organisationservice.service" 
	    class="org.xmlcrm.app.remote.OrganisationService" 
		singleton="true" />		
		
	<!-- Class for Methods which can be invoked be the client -->
    <bean id="configservice.service" 
	    class="org.xmlcrm.app.remote.ConfigurationService" 
		singleton="true" />	
		
	<!-- Class for Methods which can be invoked be the client -->
    <bean id="errorservice.service" 
	    class="org.xmlcrm.app.remote.ErrorService" 
		singleton="true" />			
				
	<!-- Class for Methods which can be invoked be the client -->
    <bean id="dokeosService.service" 
	    class="org.xmlcrm.app.remote.RemoteService" 
		singleton="true" />		

	<!-- Class for Methods which can be invoked be the client -->
    <bean id="xmlcrm.service" 
	    class="org.xmlcrm.app.remote.MainService" 
		singleton="true" />
		
</beans>
