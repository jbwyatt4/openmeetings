<?xml version="1.0" encoding="UTF-8" ?>
<library>
    
<class name="rssfeedlistitem" extends="view" layout="axis:y;spacing:0" >
    <handler name="onmouseover">
        setCurrentMouseWheelObject(this.parent.parent._scrollbar);
    </handler>
    <handler name="onmouseout">
        disableCurrentMouseWheelObject();
    </handler>
    
    <attribute name="titel" type="string" value="" />
    <attribute name="summary" type="string" value="" />
    <attribute name="link" type="string" value="" />
    <attribute name="updated" type="string" value="" />
    
    <handler name="oninit">
        <![CDATA[
            this.urlv.setText("<u><A HREF='"+this.link+"' TARGET='_BLANK'><FONT color='#0000CC'>"+canvas.getLabelName(285)+"</FONT></A></u>");
        ]]>
    </handler>
    
    <labeltext text="$once{ parent.titel }" fontstyle="bold" />
    <labeltext text="$once{ parent.updated }" fontstyle="italic" />
    <labeltext name="summaryv" text="$once{ parent.summary }"  multiline="true" width="400" />
    <labeltext name="urlv" />
    <view width="400" height="2" bgcolor="#0000CC" />
</class>    
    
<class name="rssbox" extends="view" width="400" height="380" clip="true"> 	
        
    <method name="outputRSS" args="value">
        <![CDATA[
            var t = new Array();
            for(var eg in value){
                //Debug.write("eg: ",eg,"val",value[eg]);
                t.push(value[eg]);
            }
            
            for (var i=t.length-1;i>-1;i--){
                //Debug.write("i ",i,"val",t[i],t[i].title.text,t[i].link.attributes.href,t[i].summary.text);
                new rssfeedlistitem(this.content,{updated:t[i].updated.text,titel:t[i].title.text,link:t[i].link.attributes.href,summary:t[i].summary.text});
            }
        ]]>
    </method>
    
    <view name="content" layout="axis:y;spacing:0" >
        
    </view>
    
    <vscrollbar name="_scrollbar" />
    
</class>   

